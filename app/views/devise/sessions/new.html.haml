%h2 Sign In
= semantic_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "nice"}) do |f|
  = f.inputs do
    = f.input :email
    = f.input :password
    - if devise_mapping.rememberable?
      = f.input :remember_me, as: :boolean
    = f.commit_button "Sign in", button_html: {class: "nice medium blue button"}
= render :partial => "devise/shared/links"
